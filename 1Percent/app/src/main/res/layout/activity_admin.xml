<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/colorWhite"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@color/colorTran"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:src="@mipmap/icon_date_left" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="계정관리"
            android:textStyle="bold"
            android:textColor="@color/colorText"
            android:textSize="15sp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/more_admin"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/topbottom_line">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingLeft="20dp"
            android:text="나의 ID 정보"
            android:textColor="@color/colorText"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/admin_idTv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:text="-"
            android:paddingLeft="20dp"
            android:paddingRight="20dp" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/bottom_line">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingLeft="20dp"
            android:text="PW변경"
            android:textColor="@color/colorText"
            android:textSize="13sp" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:background="@color/colorTran"
            android:paddingRight="20dp"
            android:src="@mipmap/icon_date_right" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/bottom_line">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingLeft="20dp"
            android:text="마이페이지"
            android:textColor="@color/colorText"
            android:textSize="13sp" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:background="@color/colorTran"
            android:paddingRight="20dp"
            android:src="@mipmap/icon_date_right" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/bottom_line">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingLeft="20dp"
            android:text="회원탈퇴"
            android:textColor="@color/colorText"
            android:textSize="13sp" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:background="@color/colorTran"
            android:paddingRight="20dp"
            android:src="@mipmap/icon_date_right" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/admin_logout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/bottom_line">

        <TextView
            android:id="@+id/admin_logState"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingLeft="20dp"
            android:text="로그아웃"
            android:textColor="@color/colorText"
            android:textSize="13sp" />

        <ImageButton
            android:id="@+id/admin_logoutBtn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:background="@color/colorTran"
            android:paddingRight="20dp"
            android:src="@mipmap/icon_date_right" />
    </RelativeLayout>
</LinearLayout>
