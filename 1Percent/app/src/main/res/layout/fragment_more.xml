<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/colorBackground"
    android:layout_height="match_parent">


    <RelativeLayout
        android:id="@+id/more_admin"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/topbottom_line">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingLeft="20dp"
            android:text="계정관리"
            android:textColor="@color/colorText"
            android:textSize="13sp" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:background="@color/colorTran"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:src="@mipmap/icon_date_right" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/more_notice"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/bottom_line">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingLeft="20dp"
            android:text="공지사항"
            android:textColor="@color/colorText"
            android:textSize="13sp" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:background="@color/colorTran"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:src="@mipmap/icon_date_right" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/more_center"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/bottom_line">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingLeft="20dp"
            android:text="고객센터"
            android:textColor="@color/colorText"
            android:textSize="13sp" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:background="@color/colorTran"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:src="@mipmap/icon_date_right" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/more_push"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/bottom_line">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingLeft="20dp"
            android:text="PUSH 알림"
            android:textColor="@color/colorText"
            android:textSize="13sp" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:background="@color/colorTran"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:src="@mipmap/icon_date_right" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/more_version"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/bottom_line">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingLeft="20dp"
            android:text="버전정보"
            android:textColor="@color/colorText"
            android:textSize="13sp" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:background="@color/colorTran"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:src="@mipmap/icon_date_right" />
    </RelativeLayout>
</LinearLayout>
