<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/colorBackground"
    android:layout_height="match_parent">


    <RelativeLayout
        android:id="@+id/more_admin"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/topbottom_line">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:paddingLeft="20dp"
            android:layout_height="match_parent">

            <ImageView
                android:layout_marginRight="10dp"
                android:src="@mipmap/icon_person"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="계정관리"
                android:textColor="@color/colorText"
                android:textSize="13sp" />
        </LinearLayout>


        <ImageButton
            android:id="@+id/more_adminBtn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:background="@color/colorTran"
            android:paddingRight="20dp"
            android:src="@mipmap/icon_date_right" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/more_notice"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/bottom_line">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:paddingLeft="20dp"
            android:layout_height="match_parent">

            <ImageView
                android:layout_marginRight="10dp"
                android:src="@mipmap/icon_notice"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="공지사항"
                android:textColor="@color/colorText"
                android:textSize="13sp" />
        </LinearLayout>


        <ImageButton
            android:id="@+id/more_noticeBtn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:background="@color/colorTran"
            android:paddingRight="20dp"
            android:src="@mipmap/icon_date_right" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/more_center"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/bottom_line">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:paddingLeft="20dp"
            android:layout_height="match_parent">

            <ImageView
                android:layout_marginRight="10dp"
                android:src="@mipmap/icon_center"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="고객센터"
                android:textColor="@color/colorText"
                android:textSize="13sp" />
        </LinearLayout>

        <ImageButton
            android:id="@+id/more_centerBtn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:background="@color/colorTran"
            android:paddingRight="20dp"
            android:src="@mipmap/icon_date_right" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/more_push"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/bottom_line">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:paddingLeft="20dp"
            android:layout_height="match_parent">

            <ImageView
                android:layout_marginRight="10dp"
                android:src="@mipmap/icon_push"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="PUSH 알림"
                android:textColor="@color/colorText"
                android:textSize="13sp" />
        </LinearLayout>

        <ImageButton
            android:id="@+id/more_pushBtn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:background="@color/colorTran"
            android:paddingRight="20dp"
            android:src="@mipmap/icon_date_right" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/more_version"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/bottom_line">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:paddingLeft="20dp"
            android:layout_height="match_parent">

            <ImageView
                android:layout_marginRight="10dp"
                android:src="@mipmap/icon_version"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="버전정보"
                android:textColor="@color/colorText"
                android:textSize="13sp" />
        </LinearLayout>

        <ImageButton
            android:id="@+id/more_versionBtn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:background="@color/colorTran"
            android:paddingRight="20dp"
            android:src="@mipmap/icon_date_right" />
    </RelativeLayout>
</LinearLayout>
